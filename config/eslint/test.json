{
    "env": {
        "browser": true,
        "jasmine": true
    },
    "extends": "eslint-config-holy-grail",
    "globals": {
        "expect": "readonly"
    },
    "overrides": [
        {
            "files": ["*.ts"],
            "rules": {
                "import/no-internal-modules": "off",
                "rxjs/suffix-subjects": "off"
            }
        }
    ],
    "rules": {
        "no-unused-expressions": "off",
        "node/file-extension-in-import": "off",
        "node/no-missing-require": "off"
    }
}
