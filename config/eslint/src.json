{
    "env": {
        "browser": true
    },
    "extends": "eslint-config-holy-grail",
    "overrides": [
        {
            "files": ["*.ts"],
            "globals": {
                "ngDevMode": "readonly"
            },
            "rules": {
                "node/file-extension-in-import": "off",
                "new-cap": "off"
            }
        }
    ]
}
